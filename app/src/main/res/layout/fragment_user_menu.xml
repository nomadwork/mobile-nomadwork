<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        tools:context=".Fragments.UserMenu">

    <LinearLayout
            android:id="@+id/menu_base_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_edit_text"
            android:clickable="true"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/user_menu_photo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/usuario" />

            <Button
                    android:id="@+id/back_menu_button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="155dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/ic_arrow_back"
                    android:backgroundTint="@color/colorAccent"
                    android:rotation="90" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/user_menu_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/quicksandsemibold"
                    android:text="Name"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/user_menu_email"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/quicksandsemibold"
                    android:text="Email"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/user_menu_gender"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/quicksandsemibold"
                    android:text="Gender"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/user_menu_age"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/quicksandsemibold"
                    android:text="Age"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />
        </LinearLayout>

        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent" />

        <TextView
                android:id="@+id/user_menu_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksandsemibold"
                android:text="Editar Dados"
                android:textColor="@color/dark_gray"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/user_menu_promotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksandsemibold"
                android:text="Promoções"
                android:textColor="@color/dark_gray"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/user_menu_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksandsemibold"
                android:text="Sair"
                android:textColor="@color/dark_gray"
                android:textSize="24sp" />

    </LinearLayout>

</FrameLayout>