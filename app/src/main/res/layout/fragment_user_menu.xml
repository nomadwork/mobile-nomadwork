<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        tools:context=".Fragments.UserMenu">

    <LinearLayout
            android:id="@+id/menu_base_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:clickable="true"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/user_menu_photo"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/usuario" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/back_menu_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="end"
                        android:background="@drawable/ic_arrow_back"
                        android:backgroundTint="@color/colorAccent"
                        android:rotation="90" />

                <TextView
                        android:id="@+id/user_menu_name"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="Name"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                <TextView
                        android:id="@+id/user_menu_email"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="Email"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                <TextView
                        android:id="@+id/user_menu_gender"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="Gender"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                <TextView
                        android:id="@+id/user_menu_age"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="Age"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
                android:id="@+id/user_menu_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Editar Dados"
                android:textColor="@color/dark_gray"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/user_menu_promotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksandsemibold"
                android:text="Promoções"
                android:textColor="@color/dark_gray"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/user_menu_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksandsemibold"
                android:text="Sair"
                android:textColor="@color/dark_gray"
                android:textSize="24sp" />

    </LinearLayout>

</FrameLayout>