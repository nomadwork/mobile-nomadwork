<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/fragments_holder_ws_details"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".Fragments.WorkStationDetailsFragment"
             android:layout_gravity="bottom"
             android:background="@color/colorAccent"
             android:layout_marginLeft="15sp"
             android:layout_marginRight="15sp"
             app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <TextView
                android:id="@+id/wsDetailsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="teste"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:textAllCaps="true"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wsDetailsName"
                android:id="@+id/space1"/>

        <TextView
                android:id="@+id/wsDetailsTest1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="teste2"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:textAllCaps="true"
                android:layout_below="@id/space1"
                android:visibility="gone"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wsDetailsTest1"
                android:id="@+id/space2"/>

        <TextView
                android:id="@+id/wsDetailsTest3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="teste3"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:textAllCaps="true"
                android:layout_below="@id/space2"
                android:visibility="gone"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wsDetailsTest3"
                android:id="@+id/space3"/>

    </RelativeLayout>

</FrameLayout>